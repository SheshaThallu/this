package Assignments;

public class Calculator 
{
	double firstNumber;
	double secondNumber;
	Calculator(double firstNumber, double secondNumber) 
	{
		this.firstNumber = firstNumber;
		this.secondNumber = secondNumber;
	}
	double addition()
	{
		return firstNumber + secondNumber;
	}
	double subtraction()
	{
		return firstNumber - secondNumber;
	}
	double multiplication()
	{
		return firstNumber * secondNumber;
	}
	double division()
	{
		return firstNumber / secondNumber;
	}
	public static void main(String[] args) 
	{
		Calculator c = new Calculator(10.6, 5.4);
		System.out.println(c.firstNumber + " + " + c.secondNumber + " = " + c.addition());
		System.out.println(c.firstNumber + " - " + c.secondNumber + " = " + c.subtraction());
		System.out.println(c.firstNumber + " * " + c.secondNumber + " = " + c.multiplication());
		System.out.println(c.firstNumber + " / " + c.secondNumber + " = " + c.division());
	}
}
