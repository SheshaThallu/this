package Assignments;

public class ArrayEvenFilter 
{
	static int[] filterEven(int array[])
	{
		int[] arr = {};
		int j=0;
		for(int i=0;i<array.length;i++)
		{
			if(array[i] % 2 == 0)
			{
				arr[j] = array[i];
				j++;
			}
		}
		return arr;
	}
	
	public static void main(String[] args) 
	{
		int arr[] = {3,45,23,78,44,34,88};
		int[] array = filterEven(arr);
		for(int i = 0; i < array.length; i++)
			System.out.println(array[i]);
	}
}
