package Assignmentss;

public class EmployeeUtility 
{
	static double bonusCalculator(Employee emp)
	{
		if(emp.getDesignation().equals("Manager"))
		{
			return (emp.getSalary()*30)/100;
		}
		else if(emp.getDesignation().equals("Lead"))
		{
			return (emp.getSalary()*25)/100;
		}
		else
		{
			return (emp.getSalary()*20)/100;
		}
	}
	
	public static void main(String[] args) 
	{
		Employee emp1 = new Employee(101, "Raju", 50000.0, 2000.0, "Manager");
		Employee emp2 = new Employee(101, "Ganesh", 40000.0, 1000.0, "Lead");
		Employee emp3 = new Employee(101, "Adhi", 30000.0, 500.0, "Associate");
		System.out.println(bonusCalculator(emp1)+emp1.getSalary()+emp1.getCommision());
		System.out.println(bonusCalculator(emp2)+emp2.getSalary()+emp2.getCommision());
		System.out.println(bonusCalculator(emp3)+emp3.getSalary()+emp3.getCommision());
	}
}
